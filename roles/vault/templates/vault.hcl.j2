ui = false

storage "raft" {
  path = "{{ vault_data_dir }}"
  node_id = "vault-node-1"
}

listener "tcp" {
  address = "0.0.0.0:8200"
  tls_disable = false
  tls_cert_file = "{{ vault_config_dir }}/vault.crt"
  tls_key_file = "{{ vault_config_dir }}/vault.key"
}

api_addr = "https://127.0.0.1:8200"
cluster_addr = "https://127.0.0.1:8201"
