[Unit]
Description=MinIO Backup Service
After=shared-minio.service
Wants=shared-minio.service

[Service]
Type=oneshot
User={{ backup_user }}
Group={{ backup_group }}
Environment=RESTIC_PASSWORD_FILE={{ backup_config_dir }}/restic-password
Environment=RESTIC_REPOSITORY={{ restic_repository_nas }}
Environment=MC_HOST_local=https://minio:minioadmin@127.0.0.1:9000
ExecStart=/usr/local/bin/minio-backup.sh
StandardOutput=journal
StandardError=journal
SyslogIdentifier=minio-backup

# Resource limits
CPUQuota={{ backup_cpu_limit }}
MemoryLimit={{ backup_memory_limit }}

# Security
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths={{ backup_root_dir }}
ReadWritePaths={{ backup_config_dir }}
ReadWritePaths={{ backup_log_dir }}

[Install]
WantedBy=multi-user.target