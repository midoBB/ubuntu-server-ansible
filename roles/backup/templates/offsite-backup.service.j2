[Unit]
Description=Offsite Backup Service
After=vault-backup.service postgres-backup.service minio-backup.service

[Service]
Type=oneshot
User={{ backup_user }}
Group={{ backup_group }}
Environment=RESTIC_PASSWORD_FILE={{ backup_config_dir }}/restic-password
Environment=RCLONE_CONFIG={{ backup_config_dir }}/rclone.conf
ExecStart=/usr/local/bin/offsite-backup.sh
StandardOutput=journal
StandardError=journal
SyslogIdentifier=offsite-backup

# Resource limits
CPUQuota={{ backup_cpu_limit }}
MemoryLimit={{ backup_memory_limit }}

# Security
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths={{ backup_root_dir }}
ReadWritePaths={{ backup_config_dir }}
ReadWritePaths={{ backup_log_dir }}

[Install]
WantedBy=multi-user.target